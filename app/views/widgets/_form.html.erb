<%= form_for @widget, remote: true do |f| %>
  <div class="errors_area">
  </div>
  
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :name %>
    </div>
    <div class="col-8">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :description %>
    </div>
    <div class="col-8">
      <%= f.text_area :description, class: "form-control", required: true %>
    </div>
  </div>

   <div class="form-group row">
    <div class="col-4">
      <%= f.label :kind %>
    </div>
    <div class="col-8">
      <%= f.select :kind, ["visible", "hidden"].collect { |p| [p.titleize, p] } %>
    </div>
  </div>
  <%= f.submit "Create Widget", class: "btn btn-success" %>
<% end %>
