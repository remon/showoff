<% if @widget.errors.any? %>
  $(".errors_area").html("<ul><%= custom_errors_list(@widget.errors.full_messages) %> </ul>");
<% else %>
  $.modal.close();
  
  $("#widget_<%= @widget.id %>").replaceWith("<%= escape_javascript(render partial: "animated_widget", locals: { widget: @widget }) %>");   
  $(".animated-widget").fadeIn(1500);
  
<% end %>
