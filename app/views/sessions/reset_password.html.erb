<div class="inside-modal-header">
 Reset Password
</div>
<div class="form-body">
  <%= form_with url: send_reset_instructions_path do |f| %>
  <div class="errors_area">
  </div>
  <%= f.fields_for :user do |ff| %>
  <div class="form-group row">
    <div class="col-4">
      <%= ff.label :email %>
    </div>
    <div class="col-8">
      <%= ff.email_field :email, class: "form-control", required: true %>
    </div>
  </div>
  <% end %>
  <%= f.submit "Send Reset Password Instructions", class: "btn btn-success" %>
<% end %>

</div>
