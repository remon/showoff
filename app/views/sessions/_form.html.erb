<%= form_with url: sessions_path do |f| %>
  <div class="errors_area">
  </div>
  
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :username %>
    </div>
    <div class="col-8">
      <%= f.email_field :username, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :password %>
    </div>
    <div class="col-8">
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>
  </div>
  <%= f.submit "Login", class: "btn btn-success" %>
<% end %>
