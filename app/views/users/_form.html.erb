<%= form_for @user, remote: true do |f| %>
  <div class="errors_area">
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :first_name %>
    </div>
    <div class="col-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :last_name %>
    </div>
    <div class="col-8">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :image_url %>
    </div>
    <div class="col-8">
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :email %>
    </div>
    <div class="col-8">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label :password %>
    </div>
    <div class="col-8">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Register", class: "btn btn-success" %>
<% end %>
